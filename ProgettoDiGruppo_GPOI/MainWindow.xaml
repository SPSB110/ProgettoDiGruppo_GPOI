<Window x:Class="ProgettoDiGruppo_GPOI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgettoDiGruppo_GPOI"
        Icon="ico.ico"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF676767" >
    <Grid>
        <Grid x:Name="TopGrid" Height="60" VerticalAlignment="Top" Background="#FF303030">
            <!-- ======================== top grid ======================== -->
            <Grid VerticalAlignment="Center">
                <!-- ======================== Tab Creating Section ======================== -->
                <Grid Margin="10,0,0,0">
                    <Button x:Name="btnHome" Content="Crea Tabella" Width="100" Height="40"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="btnHome_Click"/>
                </Grid>
                <Grid Margin="120,0,0,0" VerticalAlignment="Center">
                    <TextBox x:Name="rowTextBox" Width="150" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="rowTextBox_TextChanged" FontSize="20"/>
                </Grid>
                <Grid Margin="280,0,0,0" VerticalAlignment="Center">
                    <TextBox x:Name="colTextBox" Width="150" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="colTextBox_TextChanged" FontSize="20"/>
                </Grid>
                <Grid Margin="440,0,0,0" VerticalAlignment="Center">
                    <Button x:Name="btnNordOvest" Content="Nord-Ovest" Width="120" Height="40"  HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnNordOvest_Click" IsEnabled="False"/>
                </Grid>
                <Grid Margin="570,0,0,0" VerticalAlignment="Center">
                    <Button x:Name="btnMinimiCosti" Content="Minimi Costi" Width="120" Height="40"  HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnMinimiCosti_Click" IsEnabled="False"/>
                </Grid>
                <Grid Margin="700,0,0,0" VerticalAlignment="Center">
                    <Button x:Name="btnReset" Content="Reset" Width="80" Height="40"  HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnReset_Click" IsEnabled="False"/>
                </Grid>
                <Grid Margin="790,0,0,0" VerticalAlignment="Center">
                    <Button x:Name="btnAutofill" Content="Riempimento Auto" Width="130" Height="40"  HorizontalAlignment="Left" VerticalAlignment="Center" Click="btnAutofill_Click" IsEnabled="False" Background="#FF4CAF50" Foreground="White"/>
                </Grid>
            </Grid>
        </Grid>
        <Grid x:Name="leftGrid" Background="#FF303030" HorizontalAlignment="Left" Width="35" Margin="0,60,0,0">
        </Grid>

        <!-- Pannello di calcolo sulla destra -->
        <Grid x:Name="rightPanel" Background="#FF1E1E1E" HorizontalAlignment="Right" Width="400" Margin="0,60,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Titolo del pannello -->
            <Border Grid.Row="0" Background="#FF303030" BorderBrush="#FF505050" BorderThickness="0,0,0,2">
                <TextBlock Text="Calcoli Dettagliati" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"/>
            </Border>

            <!-- Area di testo scrollabile per i calcoli -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtCalcoli" 
                          Margin="15" 
                          TextWrapping="Wrap" 
                          Foreground="#FFE0E0E0" 
                          FontFamily="Consolas" 
                          FontSize="12"
                          Background="Transparent"/>
            </ScrollViewer>
        </Grid>

        <Grid VerticalAlignment="Top" Margin="0,0,400,0">
            <DataGrid x:Name="mainGrid" AutoGenerateColumns="True" HeadersVisibility="All" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeRows="False" CanUserResizeColumns="False" CanUserReorderColumns="False" IsReadOnly="False" GridLinesVisibility="All" VerticalAlignment="Top" HorizontalAlignment="Left" CanUserSortColumns="False"/>
            <!-- Easter Egg Image -->
            <Image x:Name="easterEggImage" 
                   Visibility="Collapsed" 
                   Stretch="Uniform"
                   Margin="35,60,0,0"
                   HorizontalAlignment="Stretch" 
                   VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>